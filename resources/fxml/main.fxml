<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar>
        <menus>
          <Menu fx:id="gameMenu" mnemonicParsing="false">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openHighscoresViewAction" text="Scores" />
                  <MenuItem mnemonicParsing="false" onAction="#openHelpViewAction" text="Help" />
                  <MenuItem mnemonicParsing="false" onAction="#openAboutViewAction" text="About" />
                  <MenuItem mnemonicParsing="false" onAction="#quitAction" text="Quit" />
            </items>
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/menu.png" />
                     </image>
                  </ImageView>
               </graphic>
          </Menu>
        </menus>
      </MenuBar>
      <Button fx:id="btnEasy" minHeight="64.0" minWidth="256.0" mnemonicParsing="false" onAction="#startGameAction" prefHeight="64.0" prefWidth="256.0" text="EASY" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="btnNormal" layoutX="182.0" layoutY="60.0" minHeight="64.0" minWidth="256.0" mnemonicParsing="false" onAction="#startGameAction" prefHeight="64.0" prefWidth="256.0" text="NORMAL" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="btnHard" layoutX="182.0" layoutY="129.0" minHeight="64.0" minWidth="256.0" mnemonicParsing="false" onAction="#startGameAction" prefHeight="64.0" prefWidth="256.0" text="HARD" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
   </padding>
</VBox>
